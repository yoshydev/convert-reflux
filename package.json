{
  "name": "tsv-to-csv-converter",
  "version": "1.0.0",
  "description": "TSVファイルをCSVに変換してGoogle Driveにアップロードするアプリケーション",
  "main": "main.js",
  "scripts": {
    "prebuild": "node build-config.js",
    "start": "node build-config.js && electron .",
    "dev": "node build-config.js && cross-env NODE_ENV=development electron . --enable-logging",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:win": "npm run prebuild && electron-builder --win"
  },
  "keywords": [
    "electron",
    "tsv",
    "csv",
    "google-drive"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.0",
    "electron": "^38.3.0",
    "electron-store": "^8.1.0",
    "googleapis": "128.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.yourcompany.tsv-to-csv-converter",
    "productName": "TSV to CSV Converter",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "config.js"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
